$(".upload-btn").on("click",function(){$.cookie("is_login")?window.location.href="/author/index":mkz.layerLogin()}),$(".user-box .user-msg a").on("click",function(){$.cookie("is_login")?window.location.href="/user/message":mkz.layerLogin()}),$(".no-login .login-btn").on("click",function(){mkz.layerLogin(),$(".coll-box").hide(),$(".his-box").hide()});var loginFlag=!0;$(".login-botton").on("click",function(){if(loginFlag){loginFlag=!1;var o=$(".login-num").val(),n=$(".login-pw").val(),l=0;$("#remember").prop("checked")&&(l=1),$.post("/login/account",{account:o,password:n,is_sign:l},function(o){200===o.code?(layer.msg("登录成功"),window.location.reload(),loginFlag=!0):layer.alert(o.message,{title:"登录错误提示",skin:"#FF620E",closeBtn:0},function(){layer.close(layer.index),loginFlag=!0})})}}),$(".login-pw").keypress(function(o){if(13==o.keyCode&&loginFlag){loginFlag=!1;var n=$(".login-num").val(),l=$(".login-pw").val(),i=0;$("#remember").prop("checked")&&(i=1),$.post("/login/account",{account:n,password:l,is_sign:i},function(o){200===o.code?(layer.msg("登录成功"),window.location.reload(),loginFlag=!0):layer.alert(o.message,{title:"登录错误提示",skin:"#FF620E",closeBtn:0},function(){layer.close(layer.index),loginFlag=!0})})}});